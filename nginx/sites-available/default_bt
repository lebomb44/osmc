# Default server configuration
#

server {
	listen 80 default_server;
	server_tokens off;
	return 301 https://$host$request_uri;
}

server {
	listen 443 default_server ssl;
	server_tokens off;
	server_name bourdilot.ddns.net;
	#ssl_certificate /etc/nginx/ssl/localhost.crt;
	ssl_certificate /etc/letsencrypt/live/bourdilot.ddns.net/fullchain.pem;
	#ssl_certificate_key /etc/nginx/ssl/localhost.key;
	ssl_certificate_key /etc/letsencrypt/live/bourdilot.ddns.net/privkey.pem;
	#ssl_protocols       TLSv1 TLSv1.1 TLSv1.2;
	#ssl_ciphers         HIGH:!aNULL:!MD5;
	include /etc/letsencrypt/options-ssl-nginx.conf;
	#more_set_headers 'Server: none';
        auth_basic "Restricted";                                              
        auth_basic_user_file /etc/nginx/.htpasswd;
	location / {
		#root /etc/nginx/html;
		set $auth_basic Restricted;
		set $proxy_pass none;
		if (-f /dev/shm/_redirect_box_) {
			set $auth_basic off;
			set $proxy_pass http://192.168.10.1;
		}
		if (-f /dev/shm/_redirect_wifi_) {
			set $auth_basic off;
			set $proxy_pass http://192.168.10.2;
		}
		if (-f /dev/shm/_redirect_kodi_) {
			set $auth_basic off;
			set $proxy_pass http://192.168.10.5:8080;
		}
		if (-f /dev/shm/_redirect_poe_) {
			set $auth_basic off;
			set $proxy_pass http://192.168.10.6;
		}
		if (-f /dev/shm/_redirect_salon_) {
			set $auth_basic off;
			set $proxy_pass http://192.168.10.151;
		}
		if (-f /dev/shm/_redirect_couloir_) {
			set $auth_basic off;
			set $proxy_pass http://192.168.10.152;
		}
		if (-f /dev/shm/_redirect_cuisine_) {
			set $auth_basic off;
			set $proxy_pass http://192.168.10.153;
		}
		if (-f /dev/shm/_redirect_arriere_) {
			set $auth_basic off;
			set $proxy_pass http://192.168.10.154;
		}
		if (-f /dev/shm/_redirect_avant_) {
			set $auth_basic off;
			set $proxy_pass http://192.168.10.155;
		}
		if (-f /dev/shm/_redirect_panoramix_) {
			set $auth_basic off;
			set $proxy_pass http://192.168.10.158;
		}
		if (-f /dev/shm/_redirect_entree_) {
			set $auth_basic off;
			set $proxy_pass http://192.168.10.159;
		}
		auth_basic $auth_basic;
		if ($proxy_pass != none) {
			proxy_pass $proxy_pass;
		}
		if ($proxy_pass = none) {
			root /etc/nginx/html;
		}
		expires 1s;
	}

	# Cam chambre
	location /chambre/ {
		proxy_pass https://192.168.10.156/;
	}
	# Cam galerie
	location /galerie/ {
		proxy_pass http://192.168.10.157/;
	}
	# Cameras
	location /cameras/ {
		gzip off;
		fastcgi_pass unix:/var/run/fcgiwrap.socket;
		fastcgi_param SCRIPT_FILENAME /home/osmc/workspace/reolink/index.py;
		include fastcgi_params;
	}
	# Nginx
	location /nginx {
		stub_status on;
	}
	# Ping-Pong
	location /ping {
		auth_basic off;
		return 200 'pong';
		add_header Content-Type text/plain;
	}
	# ShellInABox
	location /shell {
		proxy_pass http://127.0.0.1:4200/;
	}
	# Files
	location /files/ {
		autoindex on;
		alias /home/osmc/;
	}
	# Explore
	location /explore/ {
		fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
		fastcgi_param SCRIPT_FILENAME /home/osmc/workspace/tinyfilemanager/tinyfilemanager.php/$query_string;
		include fastcgi_params;
		alias /home/osmc/;
	}
	# Movies 
	location /movies/ {
		auth_basic off;
		autoindex on;
		alias /media/HDD/Movies/;
	}
	# Jeedom
	location /jeedom/ {
		auth_basic off;
		proxy_pass http://192.168.10.4:8080/;
	}
	# Redirect
	location /redirect/ {
		gzip off;
		fastcgi_pass unix:/var/run/fcgiwrap.socket;
		fastcgi_param SCRIPT_FILENAME /etc/nginx/scripts/redirect.sh;
		include fastcgi_params;
	}
}
